<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Project:</strong>
  <%= link_to @task.project.name, @task.project %>
</p>

<p>
  <strong>Deadline:</strong>
  <%= @task.deadline_at.to_s(:long) %>
</p>
<p>
  <strong>Status:</strong>
  <%= @task.status %>
  <% if @task.status == "not_started" %>
  <div class="btn btn-primary ">start<% @task.status = change_status(@task) %></div>
  <% else %>
  <div class="btn btn-primary ">finish<% @task.status = change_status(@task) %></div>
  <% end %>
</p>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Delete', task_path(@task), method: :delete %> |
<%= link_to 'Back', tasks_path %>



