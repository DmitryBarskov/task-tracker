<h1>New Task</h1>

<%= form_with url: tasks_path, method: 'POST' do |form| %>
	<%= form.label :project, 'Select a project' %>
	<%= form.select :project_id, Project.all.pluck(:name, :id) %>


<%= form.label :title, 'Title' %>
<%= form.text_field :title %>

<%= form.label :description, 'Description' %>
<%= form.text_area :description %>

<%= form.label :deadline_at, 'Deadline At' %>
<%= form.text_field :deadline_at %>

<% end %>	