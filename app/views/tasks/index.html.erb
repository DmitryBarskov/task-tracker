<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <td>ID</td>
      <td>Project ID</td>
      <td>Title</td>
      <td>Description</td>
      <td>Requested at</td>
      <td>Deadline</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.project_id %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.created_at.to_date.to_s(:rfc822) %></td>
        <td><%= task.deadline_at.to_date.to_s(:rfc822) %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td>
          <%=
            link_to(
              'Destroy', task,
              method: :delete, data: { confirm: 'Are you sure?' }
            )
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path %>
