
<%= form_with model: task do |form| %>
  <%= render 'common/errors', model: task %>

  <%= form.label :project_id, 'Select a project' %>
  <%= form.select :project_id, Project.all.pluck(:name, :id) %>

  <%= form.label :title, 'Title' %>
  <%= form.text_field :title %>

  <%= form.label :description, 'Description' %>
  <%= form.text_area :description %>

  <%= form.label :deadline_at, 'Deadline At' %>
  <%= form.datetime_local_field :deadline_at %>

  <%= form.label :status, 'Select a task status' %>
  <%= form.select :status, Task::ALLOWED_STATUSES %>

  <%= form.submit 'Save' %>
<% end %>
